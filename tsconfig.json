{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["dom", "es6", "scripthost", "es2018"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "paths": {
      "obsidian-daily-notes-interface/node_modules/obsidian": ["./node_modules/obsidian"],
      "obsidian": ["./node_modules/obsidian"],
      "obsidian/*": ["./node_modules/obsidian/*"],
      "react-dom": ["./node_modules/preact/compat/"],
      "react-types": ["./node_modules/@types/react/"],
      "react": ["./node_modules/preact/compat/"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "skipLibCheck": true,
    "target": "es2018"
  },
  "include": ["src"]
}
